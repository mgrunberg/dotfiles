[color]
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[user]
  name = Matias Grunberg
  email = matias@yellowspot.dev
  
[core]
  excludesfile = /home/matias/.gitignore
  editor = vim

[alias]
  co = checkout
  nff = merge --no-ff
  lg = log --oneline --decorate --all --graph
  prune-all = remote prune origin
  cleanup = "!git branch --merged | grep  -v '\\*\\|master\\|develop\\|dev\\|main' | xargs -n 1 git branch -d"
  pt = !git tag -l | xargs git tag -d && git fetch -t

[mergetool]
  keepBackup = false

[rerere]
  enabled = 1

[push]
  default = tracking

[merge]
  tool = meld

[credential]
  helper = cache --timeout=31536000

[pull]
  rebase = true

